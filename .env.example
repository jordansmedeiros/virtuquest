# N8N Integration (Required)
N8N_BASE_URL=https://n8n.virtuquest.com
N8N_API_KEY=your_n8n_api_key_here
N8N_WEBHOOK_SECRET=your_32_character_webhook_secret_here

# Authentication (Required)
JWT_SECRET=your_32_character_jwt_secret_here
JWT_REFRESH_SECRET=your_32_character_refresh_secret_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Database (Future - Placeholder)
DATABASE_URL=postgresql://username:password@localhost:5432/virtuquest
DATABASE_POOL_SIZE=10

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true
NEXT_PUBLIC_ENABLE_GAMIFICATION=false
NEXT_PUBLIC_ENABLE_TELEMETRY=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# External Integrations (Optional)
KHAN_ACADEMY_API_KEY=your_khan_academy_api_key
GOOGLE_FORMS_CLIENT_ID=your_google_forms_client_id
GOOGLE_FORMS_CLIENT_SECRET=your_google_forms_client_secret
SEDUC_API_URL=https://api.seduc.ce.gov.br
SEDUC_API_KEY=your_seduc_api_key

# Application Settings
NEXT_PUBLIC_APP_URL=https://app.virtuquest.com
NEXT_PUBLIC_APP_ENV=development
LOG_LEVEL=info

# Cache Configuration
CACHE_TTL_BNCC=86400
CACHE_TTL_BLOOM=86400
CACHE_TTL_VIRTUDES=86400

# Telemetry (Optional)
TELEMETRY_ENDPOINT=https://telemetry.virtuquest.com
TELEMETRY_BATCH_SIZE=10
TELEMETRY_FLUSH_INTERVAL=30000

# Development Only
NEXT_PUBLIC_MOCK_N8N=false
NEXT_PUBLIC_SHOW_DEBUG_INFO=false